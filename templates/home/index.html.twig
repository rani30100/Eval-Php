<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
			<link rel="preconnect" href="https://fonts.googleapis.com/%22%3E">
			<link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
			<link href="{{ asset('./scss/style.css') }}" rel="stylesheet">
			<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			<script src="https://kit.fontawesome.com/b82551dea9.js" crossorigin="anonymous"></script>
			<script src="https://unpkg.com/ionicons@latest/dist/ionicons.js"></script>
		{% endblock %}
	</head>
	<body>
		{% block body %}

			<nav class="navbar navbar-expand-lg">
				<div class="container-fluid">
					<a class="navbar-brand text-white d-flex align-items-center" href="#">
						<ion-icon name="person-circle-sharp"></ion-icon>Espace Personnel |</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link active text-white" aria-current="page" href="#">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link active text-white" aria-current="page" href="{{ path('app_admin_offers_index') }}">Admin</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<main>
				<section class="search shadow p-3 mb-5 bg-body-tertiary rounded mt-2">
					{{ include('/search_form.html.twig') }}
					{{ knp_pagination_sortable(pagination, 'Trier Par ordre Croissant', 'o.id', {'class': 'btn border border-3 bg-primary-subtle hover'}) }}

				</section>
			</div>

			<section class="my-offers ">

				<h2 class="color element">Nombres d'offres | Villes</h2>

				{% for offer in offers %}
					<div class="d-flex flex-row border border-2 border-dark-subtle btn offre rounded-3 shadow-sm p-3 mb-5 position-relative justify-content-sm-between blockOffres">
						<div class="img">
							<img src="img/logo.png" alt="">
						</div>

						<div class="text-start margin-left content-offer">
						
							<h3>{{offer.title}}</h3>
							<p>Département |
								{{offer.department}}</p>
							<div class="ml-5 block-text">
								<p>{{offer.description|raw}}</p>
							</div>

							<p class="fw-bold">Date de mise en ligne :
								{{offer.getDateAdded()|date('Y-m-d')}}</p>
							<p class="fw-bold">Cett offre expire le :
								{{offer.getExpirationDate()|date('Y-m-d')}}</p>
							<span class="btn btn-outline-warning">
								<a class="stretched-link color" href="{{ path('app_job_offer', {'id': offer.id}) }}">Postulez</a>
							</span>
						</div>
						<div class="poste">
							<h6>Poste à pourvoir</h6>
							<p>{{offer.type}}</p>
						</div>
					</div>
  
				{% endfor %}
				<div class="navigation d-flex justify-content-center">
					{{ knp_pagination_render(pagination) }}
				</div>
	<footer>
		<ul class="nav justify-content-center border-bottom pb-3 mb-3">
			<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Features</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Pricing</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">FAQs</a></li>
			<li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
		</ul>
    	<p class="text-center text-muted">© 2022 Company, Inc</p>
	
	</footer>
			</section>
		</body>
	</html>
</main>

