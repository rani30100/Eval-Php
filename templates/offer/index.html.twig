{% extends 'base.html.twig' %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<nav class="navbar navbar-expand-lg">
		<div class="container-fluid">
			<a class="navbar-brand text-white" href="#">Espace Personnel |</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link active text-white" aria-current="page" href="#">Accueil</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
{% if offer %}
	<section class="offer ">
		<div class="card">
			<div class="card-body">
				<h3>{{offer.title}}</h3>
				<hr>
				<p class="card-text">{{offer.description|raw}}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item text-start">Cette offre se situe dans le {{offer.department|raw}}.</li>
				<li class="list-group-item text-start">Salaire {{offer.department|raw}}</li>
				<li class="list-group-item text-start">Vous serez en {{offer.type}} pour ce poste.</li>
				<li class="list-group-item text-start">Annonce post√© le : {{offer.getDateAdded()|date('Y-m-d')}}</li>
				<li class="list-group-item text-start">Cette offre expire le  : {{offer.getExpirationDate()|date('Y-m-d')}}</li>
			</ul>
		</div>
{% endif %}
	<section>
		<form action="" class="d-flex justify-content-center">
			<div class="mb-3 border p-3">
				<h5>Je postule Ici!</h5>
				<textarea class="form-control"></textarea>
			</div>
		</form>
	</section>

{% endblock %}
